<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Spice86.ViewModels"
    x:Class="Spice86.Views.EmsView"
    x:DataType="vm:EmsViewModel"
    mc:Ignorable="d"
    d:DesignWidth="800" d:DesignHeight="600">
    <ScrollViewer>
        <StackPanel Margin="10" Spacing="15">
            <!-- Status -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="EMS Status" FontWeight="Bold" FontSize="14" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="EMS Version:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="0" Grid.Column="1">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}.{1}">
                                    <Binding Path="EmsMajorVersion" />
                                    <Binding Path="EmsMinorVersion" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Page Frame Segment:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PageFrameSegment, StringFormat='0x{0:X4}'}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Memory Statistics -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="Memory Statistics" FontWeight="Bold" FontSize="14" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Pages:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalPages}" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Free Pages:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FreePages}" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Used Pages:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding UsedPages}" />
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Free Memory:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding FreeMemory}" />
                    </Grid>
                    <ProgressBar Minimum="0" Maximum="{Binding TotalPages}" Value="{Binding UsedPages}" Height="10" Margin="0,10,0,0" />
                </StackPanel>
            </Border>

            <!-- Handles -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="{Binding HandleCount, StringFormat='EMS Handles ({0})'}" FontWeight="Bold" FontSize="14" />
                    <DataGrid ItemsSource="{Binding Handles}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              MaxHeight="200"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Handle" Binding="{Binding HandleNumber}" Width="80" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120" />
                            <DataGridTextColumn Header="Pages" Binding="{Binding LogicalPagesCount}" Width="80" />
                            <DataGridTextColumn Header="Size" Binding="{Binding TotalSize}" Width="100" />
                            <DataGridCheckBoxColumn Header="Saved Map" Binding="{Binding HasSavedPageMap}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Page Frame Mappings -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="Page Frame Mappings" FontWeight="Bold" FontSize="14" />
                    <DataGrid ItemsSource="{Binding PageFrameMappings}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              MaxHeight="150"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Physical Page" Binding="{Binding PhysicalPage}" Width="100" />
                            <DataGridTextColumn Header="Segment" Binding="{Binding Segment}" Width="100" />
                            <DataGridTextColumn Header="Mapped To" Binding="{Binding MappedLogicalPage}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Not Enabled Warning -->
            <Border Classes="GroupBox" Padding="10" IsVisible="{Binding !IsEnabled}">
                <StackPanel Spacing="5">
                    <TextBlock Text="⚠️ EMS is not enabled" FontWeight="Bold" FontSize="14" Foreground="Orange" />
                    <TextBlock Text="EMS (Expanded Memory) is disabled in this session. Enable it with --Ems true" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
