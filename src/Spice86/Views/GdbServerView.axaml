<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Spice86.ViewModels"
    x:Class="Spice86.Views.GdbServerView"
    x:DataType="vm:GdbServerViewModel"
    mc:Ignorable="d"
    d:DesignWidth="800" d:DesignHeight="600">
    <ScrollViewer>
        <StackPanel Margin="10" Spacing="15">
            <!-- GDB Server Status -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="GDB Server" FontWeight="Bold" FontSize="14" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ServerStatus}" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Enabled:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding IsServerEnabled}" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Port:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Port}" />
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Connection:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ConnectionInfo}" FontFamily="Consolas" TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
