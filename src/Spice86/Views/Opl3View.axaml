<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Spice86.ViewModels"
    x:Class="Spice86.Views.Opl3View"
    x:DataType="vm:Opl3ViewModel"
    mc:Ignorable="d"
    d:DesignWidth="800" d:DesignHeight="600">
    <ScrollViewer>
        <StackPanel Margin="10" Spacing="15">
            <!-- OPL3 Configuration -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="OPL3/FM Synthesizer" FontWeight="Bold" FontSize="14" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Chip:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ChipDescription}" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Base Port:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding BasePort}" FontFamily="Consolas" />
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
