<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Spice86.ViewModels"
    x:Class="Spice86.Views.XmsView"
    x:DataType="vm:XmsViewModel"
    mc:Ignorable="d"
    d:DesignWidth="800" d:DesignHeight="600">
    <ScrollViewer>
        <StackPanel Margin="10" Spacing="15">
            <!-- XMS Information -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="XMS Driver Information" FontWeight="Bold" FontSize="14" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Driver Name:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding DriverName}" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="XMS Version:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding XmsVersion}" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Base Address:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding XmsBaseAddress}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Memory Statistics -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="Memory Statistics" FontWeight="Bold" FontSize="14" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total XMS Memory:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalXmsMemory}" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Free XMS Memory:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FreeXmsMemory}" />
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Largest Free Block:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LargestFreeBlock}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- A20 Line Status -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="A20 Line" FontWeight="Bold" FontSize="14" />
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Status:" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding A20Status}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Memory Blocks -->
            <Border Classes="GroupBox" Padding="10">
                <StackPanel Spacing="5">
                    <TextBlock Text="Memory Usage" FontWeight="Bold" FontSize="14" />
                    <DataGrid ItemsSource="{Binding MemoryBlocks}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              MaxHeight="150"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="100" />
                            <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

            <!-- Not Enabled Warning -->
            <Border Classes="GroupBox" Padding="10" IsVisible="{Binding !IsEnabled}">
                <StackPanel Spacing="5">
                    <TextBlock Text="⚠️ XMS is not enabled" FontWeight="Bold" FontSize="14" Foreground="Orange" />
                    <TextBlock Text="XMS (Extended Memory) is disabled in this session. Enable it with --Xms true" TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
